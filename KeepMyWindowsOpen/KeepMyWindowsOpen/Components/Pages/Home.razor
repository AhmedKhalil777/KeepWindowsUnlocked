@page "/"

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<br />
@if (!WindowsInteropService.MouseIsMoving())
{
    <button class="btn btn-primary" @onclick="MoveMouse">Move Mouse</button>
}
else
{
    <button class="btn btn-primary" @onclick="MouseStop">Stop Mouse</button>
}

<br>
<br>
<button class="btn btn-primary" @onclick="PreventSleep">Prevent Sleep</button>


@code{
    private void MoveMouse()
    {
        WindowsInteropService.MoveMouse();
    }

    private void MouseStop()
    {
        WindowsInteropService.StopMouse();
    }

    private void PreventSleep()
    {
        WindowsInteropService.PreventSleep();
    }
}