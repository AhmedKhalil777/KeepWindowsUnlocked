@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<br />
@if (!WindowsInteropService.MouseIsMoving())
{
    <button class="btn btn-primary" @onclick="MoveMouse">Move Mouse</button>
}
else
{
    <button class="btn btn-primary" @onclick="MouseStop">Stop Mouse</button>
}
@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }


    private async Task MoveMouse()
    {
        WindowsInteropService.MoveMouse();
        await Task.Delay(2000);
        StateHasChanged();
    }

    private void MouseStop()
    {
        WindowsInteropService.StopMouse();
    }
}
